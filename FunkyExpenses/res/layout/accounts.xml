<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:admobsdk="http://schemas.android.com/apk/res/com.funkyandroid.banking.android.expenses.demo"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:layout_weight="0"
		android:background="#69c"
	    android:gravity="center"
	    android:orientation="horizontal">
		<TextView  
			android:text="@string/titleAccounts"
			android:gravity="center_vertical"
		    android:layout_height="wrap_content" 
		    android:layout_width="wrap_content" 
		    android:layout_weight="1"
			android:paddingLeft="5dip"
		    android:textColor="#fff"
			android:textSize="18sp"
		    android:textStyle="bold"/>
	    <Button
	    	android:id="@+id/add"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
		    android:layout_weight="0"
	    	android:background="@drawable/ic_title_add"
	    	/>
	</LinearLayout>
	
	<ListView	android:id="@android:id/list"
				android:layout_width="fill_parent" 
				android:layout_height="0dip"
				android:choiceMode="singleChoice"
				android:layout_weight="1" />    

	<com.admob.android.ads.AdView  
	                        android:id="@+id/ad" 
	                        android:layout_width="fill_parent" 
	                        android:layout_height="wrap_content"
							android:layout_weight="0"
	                        admobsdk:backgroundColor="#000000"
	                        admobsdk:textColor="#FFFFFF"
	                        admobsdk:keywords="Android Banking Expenses Financial"
	                        admobsdk:refreshInterval="60"
	                        admobsdk:testing="false" />
</LinearLayout>
